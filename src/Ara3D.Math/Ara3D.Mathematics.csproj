<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <RootNamespace>Ara3D.Mathematics</RootNamespace>
    <Description>Ara3D.Mathematics is an efficient math library forked from System.Numerics, MonoGame, and Vim.Math3D with additional functionality and a strict struct layout for cross platform serialization.</Description>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <PackageProjectUrl>https://github.com/ara3d/ara3d/tree/main/src/Ara3D.Math</PackageProjectUrl>
    <RepositoryUrl>https://github.com/ara3d/ara3d</RepositoryUrl>
  </PropertyGroup>

  <ItemGroup>
    <Content Include="MathOps.tt">
      <Generator>TextTemplatingFileGenerator</Generator>
      <LastGenOutput>MathOps.cs</LastGenOutput>
    </Content>
    <Content Include="Structs.tt">
      <Generator>TextTemplatingFileGenerator</Generator>
      <LastGenOutput>Structs.cs</LastGenOutput>
    </Content>
    <Content Include="TemplateHelpers.tt">
      <LastGenOutput>TemplateHelpers1.cs</LastGenOutput>
    </Content>
  </ItemGroup>
  
  <ItemGroup>
    <Service Include="{508349b6-6b84-4df5-91f0-309beebad82d}" />
  </ItemGroup>
  
  <ItemGroup>
    <Compile Update="MathOps.cs">
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
      <DependentUpon>MathOps.tt</DependentUpon>
    </Compile>
    <Compile Update="Structs.cs">
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
      <DependentUpon>Structs.tt</DependentUpon>
    </Compile>
    <None Include="README.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

</Project>
