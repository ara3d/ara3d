    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <Description>Utilities for working with array of unmanaged types.</Description>
    <PackageProjectUrl>https://github.com/ara3d/ara3d/tree/main/src/Ara3D.Buffers</PackageProjectUrl>
  </PropertyGroup>

  <ItemGroup>
    <None Include="README.md">
