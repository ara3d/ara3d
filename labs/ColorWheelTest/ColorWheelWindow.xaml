<Window x:Class="ColorWheelTest.ColorWheelWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ColorWheelTest"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <StackPanel>
            <StackPanel>
            <CheckBox Content="Value or Saturation" Name="CheckBox" IsChecked="true" Click="CheckBox_Checked"/>
            <CheckBox Content="Circle or Squares" Name="WheelOrSquare" IsChecked="true" Click="CheckBox_Checked"/>
            </StackPanel>
            <Slider Maximum="1.0" Value="0.5" Name="Slider" ValueChanged="Slider_ValueChanged"/>
        </StackPanel>
        <Image Name="MyImage">
        </Image>
    </StackPanel>
</Window>
