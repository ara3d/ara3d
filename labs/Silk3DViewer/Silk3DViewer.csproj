      <ProjectReference Include="..\..\src\Ara3D.Utils\Ara3D.Utils.csproj" />
    </ItemGroup>

    <ItemGroup>
      <None Update="cube.obj">
        <CopyToOutputDirectory>Always</CopyToOutputDirectory>
      </None>
      <None Update="Shader.frag">
